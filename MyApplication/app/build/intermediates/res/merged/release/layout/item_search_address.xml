<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linItem"
    android:padding="@dimen/margin4dp"
    android:background="@color/colorWhite"
    tools:context="com.indomaret.klikindomaret.activity.ReviewActivity">

    <ImageView
        android:id="@+id/ic_place"
        android:background="@drawable/ic_place"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/small_ic_place"
        android:layout_height="@dimen/small_ic_place" />

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textColor="@android:color/black"
        android:maxLines="2"
        android:layout_marginLeft="@dimen/margin4dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/ic_place"/>
    
</RelativeLayout>
