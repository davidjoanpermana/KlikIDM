<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    tools:context="com.indomaret.klikindomaret.activity.ErrorPageActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:scrollIndicators="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:background="@color/backgroundGrey"
                android:scrollIndicators="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:orientation="vertical"
                    android:scrollIndicators="none">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="40dp"
                        android:textColor="@color/level_default"
                        android:textStyle="bold"
                        android:text="WAKWAW!"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/level_default"
                        android:text="Saat ini kami sedang menambahkan persediaan."/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/level_default"
                        android:text="Silahkan datang kembali dalam beberapa saat"/>

                    <Button
                        android:id="@+id/homeBtn"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/colorAccent"
                        android:onClick="goToHome"
                        android:padding="5dp"
                        android:text="Kembali ke beranda"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:elevation="2dp"
                        />
                </LinearLayout>

            </LinearLayout>


            <ImageView
                android:background="@drawable/sidomar_wakwaw"
                android:layout_width="259dp"
                android:layout_height="349dp"
                android:layout_gravity="center"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
