<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundGrey"
    tools:context="com.indomaret.klikindomaret.activity.PassengerActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/passenger_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <include
            android:id="@+id/app_toolbar"
            layout="@layout/toolbar5" />
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/passenger_appbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@android:color/white"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/bullet01"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/icon_circle_blue"/>

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignLeft="@+id/bullet01"
                        android:layout_alignTop="@+id/bullet01"
                        android:layout_alignRight="@+id/bullet01"
                        android:layout_alignBottom="@+id/bullet01"
                        android:layout_margin="1dp"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:text="1"
                        android:textColor="#000000" />
                </RelativeLayout>
                <View
                    android:layout_width="70dp"
                    android:layout_height="3dp"
                    android:background="@android:color/darker_gray"
                    android:layout_gravity="center"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/bullet02"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/icon_circle_grey"/>

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignLeft="@+id/bullet02"
                        android:layout_alignTop="@+id/bullet02"
                        android:layout_alignRight="@+id/bullet02"
                        android:layout_alignBottom="@+id/bullet02"
                        android:layout_margin="1dp"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:text="2"
                        android:textColor="#000000" />
                </RelativeLayout>
                <View
                    android:layout_width="70dp"
                    android:layout_height="3dp"
                    android:background="@android:color/darker_gray"
                    android:layout_gravity="center"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/bullet03"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/icon_circle_grey"/>

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignLeft="@+id/bullet03"
                        android:layout_alignTop="@+id/bullet03"
                        android:layout_alignRight="@+id/bullet03"
                        android:layout_alignBottom="@+id/bullet03"
                        android:layout_margin="1dp"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:text="3"
                        android:textColor="#000000" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="Isi Data"/>
                <View
                    android:layout_width="30dp"
                    android:layout_height="3dp"
                    android:visibility="invisible"/>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="Cek Ulang"/>
                <View
                    android:layout_width="30dp"
                    android:layout_height="3dp"
                    android:visibility="invisible"/>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="Pembayaran"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/backgroundGrey"/>

            <Button
                android:id="@+id/btn_summary"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Ringkasan Perjalanan"
                android:textColor="@color/colorPrimary"
                android:textSize="13dp"
                android:textStyle="bold"
                android:background="@android:color/white"
                android:gravity="left|center"
                android:paddingLeft="5dp"
                android:drawableRight="@drawable/arrow_up"
                android:drawableTint="@color/colorPrimary"
                android:drawablePadding="5dp"
                android:textAllCaps="false"
                style="?android:attr/borderlessButtonStyle"/>

            <LinearLayout
                android:id="@+id/linear_summary_ticket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="#fbe392"
                        android:drawableLeft="@drawable/r_sidearr_small"
                        android:drawablePadding="5dp"
                        android:drawableTint="@android:color/black"
                        android:text="Pergi"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:id="@+id/origin_train_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="kereta argo"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/colorPrimary"/>

                    <TextView
                        android:id="@+id/origin_train_class"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Eksekutif (A)"
                        android:layout_marginLeft="5dp"/>

                    <TextView
                        android:id="@+id/origin_train_duration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3J 0M"
                        android:gravity="center"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:weightSum="3"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/origin_train_time1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="08:30 WIB"
                                android:gravity="center"
                                android:textSize="17dp"
                                android:textColor="@android:color/black"/>

                            <TextView
                                android:id="@+id/origin_train_date1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="05-07-2017"
                                android:gravity="center"/>

                            <TextView
                                android:id="@+id/origin_train_station1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="GAMBIR"
                                android:gravity="center"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="........................."
                                android:gravity="center"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:textColor="@android:color/black"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/destination_train_time1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="11:47 WIB"
                                android:gravity="center"
                                android:textSize="17dp"
                                android:textColor="@android:color/black"/>


                            <TextView
                                android:id="@+id/destination_train_date1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="05-07-2017"
                                android:gravity="center"/>

                            <TextView
                                android:id="@+id/destination_train_station1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="GAMBIR" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_summary_destination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="#fbe392"
                        android:drawableLeft="@drawable/l_sidearr_small"
                        android:drawablePadding="5dp"
                        android:drawableTint="@android:color/black"
                        android:text="Pulang"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:id="@+id/destination_train_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="kereta argo"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/colorPrimary"/>

                    <TextView
                        android:id="@+id/destination_train_class"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Eksekutif (A)"
                        android:layout_marginLeft="5dp"/>

                    <TextView
                        android:id="@+id/destination_train_duration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3J 0M"
                        android:gravity="center"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:weightSum="3"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/origin_train_time2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="08:30 WIB"
                                android:gravity="center"
                                android:textSize="17dp"
                                android:textColor="@android:color/black"/>

                            <TextView
                                android:id="@+id/origin_train_date2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="05-07-2017"
                                android:gravity="center"/>

                            <TextView
                                android:id="@+id/origin_train_station2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="GAMBIR"
                                android:gravity="center"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="........................."
                                android:gravity="center"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:textColor="@android:color/black"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/destination_train_time2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="11:47 WIB"
                                android:gravity="center"
                                android:textSize="17dp"
                                android:textColor="@android:color/black"/>


                            <TextView
                                android:id="@+id/destination_train_date2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="05-07-2017"
                                android:gravity="center"/>

                            <TextView
                                android:id="@+id/destination_train_station2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="GAMBIR"
                                android:gravity="center"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/info_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ebebeb"
                        android:text="Masuk ke akun KlikIndomaret Anda untuk kemudahan pemesanan dan berbagai keuntungan lainnya."
                        android:padding="5dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:textSize="15dp"
                        android:gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/info_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#ebebeb"
                        android:text="Masuk"
                        android:paddingEnd="2dp"
                        android:paddingBottom="2dp"
                        android:padding="5dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/colorPrimary"/>
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/backgroundGrey"/>

            <Button
                android:id="@+id/btn_buyer"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Data Pemesan"
                android:textColor="@color/colorPrimary"
                android:textSize="13dp"
                android:textStyle="bold"
                android:background="@android:color/white"
                android:gravity="left|center"
                android:paddingLeft="5dp"
                android:textAllCaps="false"
                style="?android:attr/borderlessButtonStyle"/>

            <LinearLayout
                android:id="@+id/linear_buyer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:background="@android:color/white">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sapaan"/>
                    <Spinner
                        android:id="@+id/input_gender"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/spinner_style_1"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama Lengkap"/>
                    <EditText
                        android:id="@+id/input_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext_height"
                        android:singleLine="true"
                        android:padding="10dp"
                        android:textSize="@dimen/edittext_text_size" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="(Sesuai dengan tanda pengenal)"
                        android:layout_marginTop="-5dp"
                        android:textSize="12dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No.Telp/HP"/>
                    <EditText
                        android:id="@+id/input_tlp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext_height"
                        android:singleLine="true"
                        android:padding="10dp"
                        android:textSize="@dimen/edittext_text_size"
                        android:inputType="number"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email"/>
                    <EditText
                        android:id="@+id/input_email"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext_height"
                        android:singleLine="true"
                        android:padding="10dp"
                        android:textSize="@dimen/edittext_text_size" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tiket akan dikirim ke alamat email ini."
                        android:layout_marginTop="-5dp"
                        android:textSize="12dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tanggal Lahir"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/input_date"
                            android:layout_width="90dp"
                            android:layout_height="30dp"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:background="@drawable/spinner_style_1"/>

                        <Spinner
                            android:id="@+id/input_month"
                            android:layout_width="90dp"
                            android:layout_height="30dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:background="@drawable/spinner_style_1"/>

                        <Spinner
                            android:id="@+id/input_year"
                            android:layout_width="120dp"
                            android:layout_height="30dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:background="@drawable/spinner_style_1"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/empty_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-5dp"
                        android:textSize="12dp"
                        android:textColor="@android:color/holo_red_dark"
                        android:layout_marginBottom="10dp"
                        android:visibility="gone"/>
                    <TextView
                        android:id="@+id/empty_month"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-5dp"
                        android:textSize="12dp"
                        android:textColor="@android:color/holo_red_dark"
                        android:layout_marginBottom="10dp"
                        android:visibility="gone"/>
                    <TextView
                        android:id="@+id/empty_year"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-5dp"
                        android:textSize="12dp"
                        android:textColor="@android:color/holo_red_dark"
                        android:layout_marginBottom="10dp"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/backgroundGrey"/>

            <Button
                android:id="@+id/btn_passeger"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Data Penumpang"
                android:textColor="@color/colorPrimary"
                android:textSize="13dp"
                android:textStyle="bold"
                android:background="@android:color/white"
                android:gravity="left|center"
                android:paddingLeft="5dp"
                android:textAllCaps="false"
                style="?android:attr/borderlessButtonStyle"/>

            <LinearLayout
                android:id="@+id/linear_passenger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                android:visibility="visible">

                <com.indomaret.klikindomaret.views.HeightAdjustableListView
                    android:id="@+id/list_passenger_adult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/backgroundGrey"/>

                <com.indomaret.klikindomaret.views.HeightAdjustableListView
                    android:id="@+id/list_passenger_baby"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btn_to_sit"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Pilih Kursi"
                    android:textColor="@color/colorPrimary"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:background="@android:color/white"
                    style="?android:attr/borderlessButtonStyle"/>

                <Button
                    android:id="@+id/btn_to_payment"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Lanjut Pembayaran"
                    android:textColor="@color/colorWhite"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:background="@drawable/button_style_1"
                    android:textAllCaps="false"
                    style="?android:attr/borderlessButtonStyle"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/preloader"
        android:layout_below="@id/cart_appbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:alpha="0.5"></RelativeLayout>

        <ProgressBar
            android:id="@+id/determinateBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>
