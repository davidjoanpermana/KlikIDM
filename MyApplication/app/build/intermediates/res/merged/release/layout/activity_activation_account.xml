<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.indomaret.klikindomaret.activity.ActivationAccountActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/activation_account_appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <include
            android:id="@+id/app_toolbar"
            layout="@layout/toolbar4" />
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_below="@id/activation_account_appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Terima kasih sudah mendaftar, untuk petunjuk dan kode aktivasi telah dikirim ke  david@gmail.com. Jika tidak menerima pesan baru coba cek folder spam/junk di email Anda."/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:src="@drawable/subs"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="5dp"
            android:textSize="14dp"
            android:text="Masukan kode aktivasi :"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <EditText
                android:id="@+id/activation_code_1"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:maxLength="1"
                android:textSize="30dp"
                android:textStyle="bold"
                android:inputType="number"
                android:background="@drawable/edittext_style_1"/>

            <EditText
                android:id="@+id/activation_code_2"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:maxLength="1"
                android:textSize="30dp"
                android:textStyle="bold"
                android:inputType="number"
                android:background="@drawable/edittext_style_1"/>

            <EditText
                android:id="@+id/activation_code_3"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:maxLength="1"
                android:textSize="30dp"
                android:textStyle="bold"
                android:inputType="number"
                android:background="@drawable/edittext_style_1"/>

            <EditText
                android:id="@+id/activation_code_4"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:maxLength="1"
                android:textSize="30dp"
                android:textStyle="bold"
                android:inputType="number"
                android:background="@drawable/edittext_style_1"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_activation"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:text="Aktivasi sekarang"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"
            android:textSize="13dp"
            android:textStyle="bold"
            android:background="@drawable/button_style_1"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            style="?android:attr/borderlessButtonStyle"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Sudah mendaftar tetapi belum mendapatkan email aktivasi? "/>

            <TextView
                android:id="@+id/resend_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kirim ulang email aktivasi"
                android:layout_gravity="center"
                android:textColor="@android:color/holo_blue_dark"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
