<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.indomaret.klikindomaret.activity.ReviewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">

        <RatingBar
            android:id="@+id/rate_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stepSize="1"
            android:layout_gravity="center_horizontal"/>

        <EditText
            android:id="@+id/content_review"
            android:layout_width="match_parent"
            android:gravity="start"
            android:padding="5dp"
            android:layout_height="150dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/card_product_style_1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/cancel_review"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginRight="3dp"
                android:text="Batal"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/button_style_3"/>

            <Button
                android:id="@+id/send_review"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                android:text="Kirim"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/button_style_3"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
