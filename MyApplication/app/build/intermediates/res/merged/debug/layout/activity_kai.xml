<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    app:theme="@style/AppTheme.DrawerIcon">

    <include
        layout="@layout/app_bar_main_kai"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <com.indomaret.klikindomaret.views.HeightAdjustableListView
            android:id="@+id/listView"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:layout_gravity="start"
            app:alwaysExtended="false"
            app:nestType="multiple"
            android:divider="@null"
            android:dividerHeight="0dp"/>

        <TextView
            android:id="@+id/back_home"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:layout_marginBottom="10dp"
            android:background="#ffffff"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="Kembali ke Klikindomaret.com"/>
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>
