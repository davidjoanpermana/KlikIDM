<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context="com.indomaret.klikindomaret.fragment.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/area_zipcode"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:textSize="14dp"
            android:background="@drawable/edittext_style_1"
            android:hint="Masukkan Area/Kode Pos"/>

        <com.indomaret.klikindomaret.views.HeightAdjustableListView
            android:id="@+id/area_zipcode_list"
            android:layout_width="match_parent"
            android:layout_height="150dp">
        </com.indomaret.klikindomaret.views.HeightAdjustableListView>

        <Button
            android:id="@+id/cancel_area_search"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_style_3"
            android:text="Batal"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textAllCaps="false"/>
    </LinearLayout>
</RelativeLayout>
