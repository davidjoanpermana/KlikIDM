<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundGrey"
    tools:context="com.indomaret.klikindomaret.activity.OrderSummaryKAIActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/summary_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <include
            android:id="@+id/app_toolbar"
            layout="@layout/toolbar5" />
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/summary_appbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@android:color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:padding="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_countdown"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sisa waktu pemesanan"/>

                    <TextView
                        android:id="@+id/text_countdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="45 menit 20 detik"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginBottom="5dp"
                android:background="@color/backgroundGrey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/bullet01"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/icon_circle_blue"/>

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignLeft="@+id/bullet01"
                        android:layout_alignTop="@+id/bullet01"
                        android:layout_alignRight="@+id/bullet01"
                        android:layout_alignBottom="@+id/bullet01"
                        android:layout_margin="1dp"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:text="1"
                        android:textColor="#000000" />
                </RelativeLayout>
                <View
                    android:layout_width="70dp"
                    android:layout_height="3dp"
                    android:background="@android:color/darker_gray"
                    android:layout_gravity="center"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/bullet02"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/icon_circle_blue"/>

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignLeft="@+id/bullet02"
                        android:layout_alignTop="@+id/bullet02"
                        android:layout_alignRight="@+id/bullet02"
                        android:layout_alignBottom="@+id/bullet02"
                        android:layout_margin="1dp"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:text="2"
                        android:textColor="#000000" />
                </RelativeLayout>
                <View
                    android:layout_width="70dp"
                    android:layout_height="3dp"
                    android:background="@android:color/darker_gray"
                    android:layout_gravity="center"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/bullet03"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/icon_circle_grey"/>

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignLeft="@+id/bullet03"
                        android:layout_alignTop="@+id/bullet03"
                        android:layout_alignRight="@+id/bullet03"
                        android:layout_alignBottom="@+id/bullet03"
                        android:layout_margin="1dp"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:text="3"
                        android:textColor="#000000" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:visibility="visible">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="Isi Data"/>
                <View
                    android:layout_width="30dp"
                    android:layout_height="3dp"
                    android:visibility="invisible"/>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="Cek Ulang"/>
                <View
                    android:layout_width="30dp"
                    android:layout_height="3dp"
                    android:visibility="invisible"/>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="Pembayaran"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/backgroundGrey"/>

            <Button
                android:id="@+id/btn_summary"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Ringkasan Perjalanan"
                android:textColor="@color/colorPrimary"
                android:textSize="13dp"
                android:textStyle="bold"
                android:background="@android:color/white"
                android:gravity="left|center"
                android:paddingLeft="5dp"
                android:drawableRight="@drawable/arrow_down"
                android:drawableTint="@color/colorPrimary"
                android:drawablePadding="5dp"
                android:textAllCaps="false"
                style="?android:attr/borderlessButtonStyle"/>

            <LinearLayout
                android:id="@+id/linear_summary_ticket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="#fbe392"
                        android:drawableLeft="@drawable/r_sidearr_small"
                        android:drawableTint="@android:color/black"
                        android:drawablePadding="5dp"
                        android:text="Pergi"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:id="@+id/origin_train_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="kereta argo"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/colorPrimary"/>

                    <TextView
                        android:id="@+id/origin_train_class"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Eksekutif (A)"
                        android:layout_marginLeft="5dp"/>

                    <TextView
                        android:id="@+id/origin_train_duration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3J 0M"
                        android:gravity="center"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:weightSum="3"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/origin_train_time1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="08:30 WIB"
                                android:gravity="center"
                                android:textSize="17dp"
                                android:textColor="@android:color/black"/>

                            <TextView
                                android:id="@+id/origin_train_date1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="05-07-2017"
                                android:gravity="center"/>

                            <TextView
                                android:id="@+id/origin_train_station1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="GAMBIR"
                                android:gravity="center"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="........................."
                                android:gravity="center"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:textColor="@android:color/black"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/destination_train_time1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="11:47 WIB"
                                android:gravity="center"
                                android:textSize="17dp"
                                android:textColor="@android:color/black"/>


                            <TextView
                                android:id="@+id/destination_train_date1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="05-07-2017"
                                android:gravity="center"/>

                            <TextView
                                android:id="@+id/destination_train_station1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="GAMBIR"
                                android:gravity="center"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_summary_destination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="#fbe392"
                        android:drawableLeft="@drawable/l_sidearr_small"
                        android:drawableTint="@android:color/black"
                        android:drawablePadding="5dp"
                        android:text="Pulang"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:id="@+id/destination_train_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="kereta argo"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/colorPrimary"/>

                    <TextView
                        android:id="@+id/destination_train_class"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Eksekutif (A)"
                        android:layout_marginLeft="5dp"/>

                    <TextView
                        android:id="@+id/destination_train_duration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3J 0M"
                        android:gravity="center"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/origin_train_time2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="08:30 WIB"
                                android:textColor="@android:color/black"
                                android:textSize="17dp" />

                            <TextView
                                android:id="@+id/origin_train_date2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="05-07-2017" />

                            <TextView
                                android:id="@+id/origin_train_station2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="GAMBIR" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="........................."
                                android:textColor="@android:color/black"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/destination_train_time2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="11:47 WIB"
                                android:textColor="@android:color/black"
                                android:textSize="17dp" />


                            <TextView
                                android:id="@+id/destination_train_date2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="05-07-2017" />

                            <TextView
                                android:id="@+id/destination_train_station2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="GAMBIR" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/backgroundGrey"/>

            <Button
                android:id="@+id/btn_passenger"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Rincian Penumpang"
                android:textColor="@color/colorPrimary"
                android:textSize="13dp"
                android:textStyle="bold"
                android:background="@android:color/white"
                android:gravity="left|center"
                android:paddingLeft="5dp"
                android:drawableRight="@drawable/arrow_up"
                android:drawableTint="@color/colorPrimary"
                android:drawablePadding="5dp"
                android:textAllCaps="false"
                style="?android:attr/borderlessButtonStyle"/>

            <LinearLayout
                android:id="@+id/linear_passenger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical">

                <com.indomaret.klikindomaret.views.HeightAdjustableListView
                    android:id="@+id/list_passenger"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/backgroundGrey"/>

            <Button
                android:id="@+id/btn_price"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Rincian Harga"
                android:textColor="@android:color/black"
                android:textSize="13dp"
                android:textStyle="bold"
                android:background="#ebebeb"
                android:gravity="left|center"
                android:paddingLeft="5dp"
                android:drawableRight="@drawable/arrow_up"
                android:drawablePadding="5dp"
                android:textAllCaps="false"
                style="?android:attr/borderlessButtonStyle"/>

            <LinearLayout
                android:id="@+id/linear_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="10dp"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Harga Tiket Pergi"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/backgroundGrey"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/original_price_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Dewasa (2xRp.250.000)"/>
                        <TextView
                            android:id="@+id/original_price_train"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:layout_weight="1"
                            android:text="Rp.500.000"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_original_discount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Diskon Channel KAI"/>
                        <TextView
                            android:id="@+id/original_discount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:layout_weight="1"
                            android:text="Rp.-7.500"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_original_fee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Convenience Fee"/>
                        <TextView
                            android:id="@+id/original_fee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:layout_weight="1"
                            android:text="Rp.7.500"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:gravity="right"
                            android:text="Subtotal"/>
                        <TextView
                            android:id="@+id/original_subtotal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/backgroundGrey"/>

                <LinearLayout
                    android:id="@+id/linear_price_destination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Harga Tiket Pulang"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/backgroundGrey"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/destination_price_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Dewasa (2xRp.250.000)"/>
                            <TextView
                                android:id="@+id/destination_price_train"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="50dp"
                                android:layout_weight="1"
                                android:text="Rp.500.000"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linear_destination_discount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Diskon Channel KAI"/>
                            <TextView
                                android:id="@+id/destination_discount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="50dp"
                                android:layout_weight="1"
                                android:text="Rp.-7.500"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linear_destination_fee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Convenience Fee"/>
                            <TextView
                                android:id="@+id/destination_fee"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="50dp"
                                android:layout_weight="1"
                                android:text="Rp.7.500"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                android:gravity="right"
                                android:text="Subtotal"/>
                            <TextView
                                android:id="@+id/destination_subtotal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="50dp"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                android:layout_weight="1"
                                android:text="Rp.225.000"/>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/backgroundGrey"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:text="Total Pembayaran"/>
                    <TextView
                        android:id="@+id/total_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:text="Rp.435.000"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/backgroundGrey"/>

            <Button
                android:id="@+id/btn_payment"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="20dp"
                android:text="Bayar"
                android:textColor="@color/colorWhite"
                android:textSize="13dp"
                android:textStyle="bold"
                android:background="@drawable/button_style_1"
                android:textAllCaps="false"
                style="?android:attr/borderlessButtonStyle"/>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/preloader"
        android:layout_below="@id/choose_sit_appbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:alpha="0.5"/>

        <ProgressBar
            android:id="@+id/determinateBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>
