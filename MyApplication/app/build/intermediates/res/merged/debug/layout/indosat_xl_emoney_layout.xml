<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context="com.indomaret.klikindomaret.fragment.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/phone_number_emoney"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:textSize="14dp"
            android:inputType="textCapCharacters"
            android:background="@drawable/edittext_style_1"
            android:hint="No. HP (Contoh : 08123456789)"/>

        <EditText
            android:id="@+id/token_code"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:textSize="14dp"
            android:inputType="textCapCharacters"
            android:background="@drawable/edittext_style_1"
            android:hint="Kode Token"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/cancel_xl_indPay"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/button_style_3"
                android:text="Tutup"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/submit_xl_indPay"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/button_style_3"
                android:text="Bayar"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textAllCaps="false"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
