<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/bullet_hour"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:src="@drawable/icon_circle_grey"
                android:tint="#fafafa"/>

            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignLeft="@+id/bullet_hour"
                android:layout_alignTop="@+id/bullet_hour"
                android:layout_alignRight="@+id/bullet_hour"
                android:layout_alignBottom="@+id/bullet_hour">

                <TextView
                    android:id="@+id/hour_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:textSize="44dp"
                    android:text="1"
                    android:textColor="@android:color/holo_red_dark" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:text="Jam"
                    android:textColor="@android:color/black" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/bulle_minute"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:src="@drawable/icon_circle_grey"
                android:tint="#fafafa"/>

            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignLeft="@+id/bulle_minute"
                android:layout_alignTop="@+id/bulle_minute"
                android:layout_alignRight="@+id/bulle_minute"
                android:layout_alignBottom="@+id/bulle_minute">

                <TextView
                    android:id="@+id/minute_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:textSize="44dp"
                    android:text="1"
                    android:textColor="@android:color/holo_blue_dark" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:text="Menit"
                    android:textColor="@android:color/black" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/bullet_second"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:src="@drawable/icon_circle_grey"
                android:tint="#fafafa"/>

            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignLeft="@+id/bullet_second"
                android:layout_alignTop="@+id/bullet_second"
                android:layout_alignRight="@+id/bullet_second"
                android:layout_alignBottom="@+id/bullet_second">

                <TextView
                    android:id="@+id/second_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:textSize="44dp"
                    android:text="1"
                    android:textColor="@android:color/holo_orange_light" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:text="Detik"
                    android:textColor="@android:color/black" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_style_2"
        android:layout_margin="10dp"
        android:text="Lanjutkan dengan harga non promo"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center"/>
</LinearLayout>