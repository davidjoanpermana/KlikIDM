<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@color/colorWhite">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/border"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/original_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Malang"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <ImageView
                android:id="@+id/btn_switch"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/r_sidearr"/>

            <TextView
                android:id="@+id/destination_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jakarta"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>
        </LinearLayout>

        <TextView
            android:id="@+id/train_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Matharmaja"
            android:textSize="13dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kode Pembayaran"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/ordering_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="015343548456"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_booking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kode Booking"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/booking_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="015343548456"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="5dp"
            android:background="@color/backgroundGrey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Berangkat"
                    android:textSize="15dp"/>

                <TextView
                    android:id="@+id/original_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="14-05-2017"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stasiun Keberangkatan"
                    android:textSize="15dp"/>

                <TextView
                    android:id="@+id/original_station"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Gambir"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_resend"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Kirim Ulang e_Tiket"
            android:textSize="13dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            android:background="#cceeff"
            android:visibility="visible"/>

        <LinearLayout
            android:id="@+id/linear_passenger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <com.indomaret.klikindomaret.views.HeightAdjustableListView
                android:id="@+id/list_passenger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/backgroundGrey"/>

        <ImageView
            android:id="@+id/btn_passeger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:layout_gravity="center"
            android:src="@drawable/down_arr_colp"/>

        <TextView
            android:id="@+id/status_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Menunggu Pembayaran"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@android:color/holo_red_dark"/>

        <TextView
            android:id="@+id/error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Menunggu Pembayaran"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Pemesanan"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/shipping_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="05-Jul-2017"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>